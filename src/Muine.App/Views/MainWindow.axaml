<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Muine.App.ViewModels"
        xmlns:views="using:Muine.App.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="Muine.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Muine Music Player - .NET 10"
        Width="1000" Height="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Import Music Folder..." 
                          Click="OnImportMusicFolderClick"/>
                <MenuItem Header="_Add Music Files..." 
                          Click="OnAddMusicFilesClick"/>
                <Separator/>
                <MenuItem Header="_Refresh Selected Song Metadata" 
                          Click="OnRefreshSelectedSongClick"/>
                <MenuItem Header="Refresh _All Metadata..." 
                          Click="OnRefreshAllMetadataClick"/>
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Playlist">
                <MenuItem Header="_Clear Playlist" Command="{Binding PlaylistViewModel.ClearPlaylistCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Music Library Tab -->
            <TabItem Header="Music Library">
                <views:MusicLibraryView DataContext="{Binding MusicLibraryViewModel}"
                                        SongDoubleClicked="OnLibrarySongDoubleClick"
                                        AddSongToPlaylistRequested="OnLibraryAddSongToPlaylistRequested"
                                        AddAlbumToPlaylistRequested="OnLibraryAddAlbumToPlaylistRequested"
                                        EditMetadataRequested="OnEditMetadataRequested"/>
            </TabItem>
            
            <!-- Playlist Tab -->
            <TabItem Header="Playlist">
                <views:PlaylistView DataContext="{Binding PlaylistViewModel}"
                                    SongDoubleClicked="OnPlaylistSongDoubleClick"/>
            </TabItem>
            
            <!-- Radio Tab -->
            <TabItem Header="Radio">
                <views:RadioView DataContext="{Binding RadioViewModel}"
                                 StationDoubleClicked="OnRadioStationDoubleClick"
                                 AddStationRequested="OnAddRadioStationRequested"
                                 EditStationRequested="OnEditRadioStationRequested"
                                 RefreshRequested="OnRadioRefreshRequested"/>
            </TabItem>
        </TabControl>

        <!-- Player Controls -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <Grid RowDefinitions="Auto,Auto">
                <!-- Progress Bar and Time -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="10,10,10,5">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <Slider Name="PositionSlider"
                                Minimum="0" 
                                Maximum="{Binding MaxPosition}" 
                                Value="{Binding CurrentPosition, Mode=OneWay}"
                                IsEnabled="{Binding CanSeek}"
                                ValueChanged="OnSliderValueChanged"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding TimeDisplay}" 
                               FontSize="10" 
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </Grid>

                <!-- Controls and Song Info -->
                <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="10,5,10,10">
                    <!-- Play/Pause/Stop Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="5">
                        <Button Content="â—€â—€" Width="40" Height="40" FontSize="12" ToolTip.Tip="Previous" Command="{Binding PlayPreviousCommand}"/>
                        <Button Content="â–¶â¸" Width="40" Height="40" FontSize="14" ToolTip.Tip="Play/Pause" Command="{Binding TogglePlayPauseCommand}"/>
                        <Button Content="â– " Width="40" Height="40" FontSize="16" ToolTip.Tip="Stop" Command="{Binding StopCommand}"/>
                        <Button Content="â–¶â–¶" Width="40" Height="40" FontSize="12" ToolTip.Tip="Next" Command="{Binding PlayNextCommand}"/>
                    </StackPanel>

                    <!-- Song Info -->
                    <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentSongDisplay}" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Volume Control -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="ðŸ”Š" VerticalAlignment="Center"/>
                        <Slider Width="100" 
                                Minimum="0" 
                                Maximum="100" 
                                Value="{Binding Volume}" 
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="3" 
                BorderBrush="#333333" 
                BorderThickness="0,1,0,0"
                Background="#2a2a2a"
                IsVisible="{Binding !!OperationStatus}"
                Padding="10,3">
            <TextBlock Text="{Binding OperationStatus}" 
                       FontSize="11" 
                       Foreground="#cccccc"/>
        </Border>
    </Grid>

</Window>
